<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head.ejs') %>
    <title>Home Page</title>
</head>

<body class="bg-light">
    <%- include('./partials/navbar.ejs') %>
    
    <div class="container py-4">
        <h1 class="h3 text-center mb-4 fw-bold text-primary">Latest Posts</h1>
        
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3">
            <% blogs.forEach(blog=>{ %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="<%= blog.coverImage %>" class="card-img-top object-fit-cover" alt="<%= blog.title %>" style="height: 150px;">
                    <div class="card-body p-3">
                        <h6 class="card-title fw-bold mb-2"><%= blog.title %></h6>
                        <p class="card-text small text-muted line-clamp-3 mb-3"><%= blog.body %></p>
                        <a href="/blog/<%= blog._id %>" class="btn btn-link p-0 text-decoration-none">
                            Read More <i class="bi bi-arrow-right-short"></i>
                        </a>
                    </div>
                    <!-- <div class="card-footer bg-transparent py-2 small text-muted">
                        <i>Posted on</i> <%= blog.createdAt %>
                    </div> -->
                </div>
            </div>
            <% }) %>
        </div>
    </div>

</body>
<%-include('./partials/script.ejs') %>

</html>